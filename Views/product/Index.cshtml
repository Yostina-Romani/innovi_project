@model IEnumerable<WebApplication1.Models.Product>

@{
    ViewBag.Title = "Products";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<h2 class="text-center my-4">Our Products</h2>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <!-- صورة المنتج -->
                    <img src="@product.ImageURL" class="card-img-top" alt="@product.ProductName" style="height:200px; object-fit:cover;">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text text-success fw-bold">@product.Price.ToString("C")</p>
                        <p class="card-text">Stock: @product.Stock</p>

                        <!-- عرض اللون -->
                        <p class="card-text">
                            Color:
                            <span style="display:inline-block; width:20px; height:20px; border:1px solid #000; background-color:@product.Color;"></span>
                        </p>

                        <div class="mt-auto">
                            <!-- زر التفاصيل -->
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-info btn-sm me-1">Details</a>

                            <!-- زر الإضافة للسلة -->
                            <form asp-controller="Cart" asp-action="Add" method="post" style="display:inline-block;">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <input type="number" name="quantity" value="1" min="1" style="width:50px;" class="form-control d-inline-block" />
                                <button type="submit" class="btn btn-primary btn-sm mt-1">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- زر الانتقال للسلة -->
    <div class="text-center mt-4">
        <a asp-controller="Cart" asp-action="Index" class="btn btn-success btn-lg">Go to Cart</a>
    </div>
</div>
