@model List<WebApplication1.Models.CartItem>

<h2>My Cart</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product?.ProductName</td>
                <td>@item.Quantity</td>
                <td>@string.Format("{0:C}", item.Product?.Price ?? 0)</td>
                <td>@string.Format("{0:C}", item.Quantity * (item.Product?.Price ?? 0))</td>
            </tr>
        }
    </tbody>
</table>

<p>
    Total: @string.Format("{0:C}", Model.Where(i => i.Product != null).Sum(i => i.Quantity * i.Product!.Price))
</p>
