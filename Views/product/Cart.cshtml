@model List<WebApplication1.Models.CartItem>

<h2>My Cart</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>Action</th> <!-- 👈 جديد -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product?.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Product?.Price</td>
                <td>@(item.Quantity * (item.Product?.Price ?? 0))</td>
                <td>
                    <a asp-controller="Cart"
                       asp-action="Remove"
                       asp-route-id="@item.Id"
                       asp-route-customerId="@item.CustomerId"
                       class="btn btn-danger btn-sm">
                        Delete
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>
